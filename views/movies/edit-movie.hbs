<h2>Actualizar la película {{title}}</h2>


<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Vas a editar {{title}}</h1>
            <hr>



            <form action="/movies/{{id}}/edit" method="POST">

                <div class="mb-3">

                    <label for="title"></label>
                    <input type="text" class="form-control" id="title" placeholder="Título" name="title"
                        value="{{title}}">
                </div>

                <div class="mb-3">
                    <label for="genre"></label>
                    <input type="text" class="form-control" id="genre" placeholder="Género" name="genre"
                        value="{{genre}}">
                </div>

                <div class="mb-3">
                    <label for="plot"></label>
                    <input type="text" class="form-control" id="plot" placeholder="Trama" name="plot" value="{{plot}}">
                </div>


                <button type="submit" class="btn btn-dark btn-sm">Editar</button>

                <a href="/movies" class="btn btn-dark btn-sm">Volver</a>
            </form>

        </div>
    </div>