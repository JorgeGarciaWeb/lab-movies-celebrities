<div class="movie-class">
    <h2>Detalles de la pel√≠cula {{title}}</h2>



    <div class="movie">
        <h5>{{title}}</h5>
        <h5>{{genre}}</h5>
        <p>{{plot}}</p>
    </div>



    <div class="col-md-6">
        Personajes
        {{#each cast}}
        <article>
            <a href="/celebrities">

                {{name}} {{occupation}} {{catchPhrase}}
        </article>
        {{/each}}

    </div>

    <form action="/movies/{{id}}/delete" method="POST" style="display: inline-block">
        <input type="submit" value="Eliminar" class="btn btn-dark btn-sm">
    </form>



    <hr>




    <div class="btn-return">
        <a href="/movies" class="btn btn-dark">Volver al listado</a>
    </div>
</div>